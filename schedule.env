# ==============================================
# スケジュール設定
# ==============================================

# スケジュールモード
#   always  = 常時起動（デフォルト）
#   timed   = 指定時間帯のみ起動（毎日）
#   custom  = 曜日 + 時間帯指定
SCHEDULE_MODE=always

# 起動・停止時間（timed / custom モードで使用）
SCHEDULE_START_TIME=06:00
SCHEDULE_STOP_TIME=00:30

# 曜日指定（custom モードで使用、カンマ区切り）
# 空 = 毎日、例: mon,tue,wed,thu,fri,sat,sun
SCHEDULE_DAYS=

# タイムゾーン
SCHEDULE_TIMEZONE=Asia/Tokyo

# ==============================================
# 日次自動再起動
# ==============================================

# 日次再起動の有効/無効
RESTART_ENABLED=true

# 再起動時刻（24時間形式）
RESTART_TIME=04:30

# 事前通知のタイミング（分前、カンマ区切り）
RESTART_WARN_MINUTES=30,10,5,1
